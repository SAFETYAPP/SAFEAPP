<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".SetupActivity">


    <ScrollView
        android:id="@+id/scrollview_setup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_above="@+id/next">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:text="@string/please_enter_and_email_setup_screen"
                android:textColor="@color/black"
                android:textSize="@dimen/safeapp_text_size" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/Gray" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:text="@string/primary_email"
                android:textColor="@color/black"
                android:textSize="@dimen/safeapp_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/primary_email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/default_padding"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:background="@color/transparent"
                android:hint="@string/please_enter_primary_email"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/Gray"
                android:textSize="@dimen/safeapp_text_size" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/Gray" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:text="@string/secondary_email"
                android:textColor="@color/black"
                android:textSize="@dimen/safeapp_text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/secondary_email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/default_padding"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:background="@color/transparent"
                android:hint="@string/please_enter_secondary_email"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/Gray"
                android:textSize="@dimen/safeapp_text_size" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/Gray" />


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/next"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_safeapp_height"
        android:layout_alignParentBottom="true"
        android:background="@color/Gray"
        android:text="@string/next"
        android:textColor="@color/White"
        android:textSize="@dimen/title_safeapp_text_size"
        android:textStyle="bold" />

</RelativeLayout>