<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">



        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/width_introduct2"
            android:layout_height="@dimen/hight_introduct2"

            android:id="@+id/imageview"
            android:background="@drawable/howto2"/>


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/howto_2_text"
        android:layout_below="@+id/imageview"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageview"
        android:textSize="@dimen/intro_text_size"
        android:id="@+id/text_intro"
        android:gravity="center"
        android:padding="@dimen/introduction_text_padding"
        android:visibility="gone"
        android:textColor="@color/White"
        android:text="@string/howto_2"/>


</RelativeLayout>