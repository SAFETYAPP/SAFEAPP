<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_gray_light" >
    
      <ImageView
        android:layout_width="@dimen/loading_wheel_bg"
        android:layout_height="@dimen/loading_wheel_bg"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/loading_wheel_background" />

    <ProgressBar
        android:id="@+id/pd_custom_loading_dialog"
        android:layout_width="@dimen/loading_wheel_icon"
        android:layout_height="@dimen/loading_wheel_icon"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:indeterminateDrawable="@drawable/my_progress_indeterminate" />

    <ImageView
        android:layout_width="@dimen/freely_icon_loading_circle"
        android:layout_height="@dimen/freely_icon_loading_circle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/loading_icon_freely" />

  

</RelativeLayout>